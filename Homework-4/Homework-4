// Homework lesson 4.

/*Задание 1. Написать функцию, преобразующую число в объект. Передавая на вход число от 0 до 999, мы должны получить на выходе объект,
в котором в соответствующих свойствах описаны единицы, десятки и сотни.*/

function numbChanger(num) {
    if (!Number.isInteger(num) || num < 0 || num > 999) {
        console.log('Введите целое число от 0 до 999.');
        return {};
    }

    return {
        единицы: num % 10,
        десятки: Math.floor(num / 10) % 10,
        сотни: Math.floor(num / 100),
    };
}

console.log(numbChanger(777));

/*Задание 2. Продолжить работу с интернет-магазином:
2.1. В прошлом домашнем задании вы реализовали корзину на базе массивов. Какими объектами можно заменить их элементы?
2.2. Реализуйте такие объекты.
2.3. Перенести функционал подсчета корзины на объектно-ориентированную базу.*/

let purchases = {
    items: [
        {
            item: "product1",
            price: 3999,
            quantity: 2
        },
        {
            item: "product2",
            price: 2999,
            quantity: 4
        },
        {
            item: "product3",
            price: 6999,
            quantity: 1
        }
    ],
    countBasketPrice() {
        return this.items.reduce((totalPrice, item) => totalPrice + item.price * item.quantity, 0);
    },
};

console.log(purchases.countBasketPrice());
